---
import Base from "./Base.astro";

interface Props {
  title: string;
  description: string;
  tags: string[];
  url?: string;
  repo?: string;
}

const { title, description, tags, url, repo } = Astro.props;
---

<Base title={title} description={description}>
  <article class="project-page">
    <header class="project-header">
      <a href="/projects" class="back-link">&larr; all projects</a>
      <h1 class="project-title">{title}</h1>
      <p class="project-desc">{description}</p>

      <div class="project-meta">
        {tags.length > 0 && (
          <div class="project-tags">
            {tags.map((tag) => (
              <span class="project-tag">{tag}</span>
            ))}
          </div>
        )}

        <div class="project-links">
          {url && (
            <a href={url} target="_blank" rel="noopener" class="project-link project-link-site">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"/>
                <line x1="2" y1="12" x2="22" y2="12"/>
                <path d="M12 2a15.3 15.3 0 014 10 15.3 15.3 0 01-4 10 15.3 15.3 0 01-4-10 15.3 15.3 0 014-10z"/>
              </svg>
              website
            </a>
          )}
          {repo && (
            <a href={repo} target="_blank" rel="noopener" class="project-link project-link-repo">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
              </svg>
              source
            </a>
          )}
        </div>
      </div>

      <hr class="project-divider" />
    </header>

    <div class="prose">
      <slot />
    </div>
  </article>
</Base>

<style>
  .project-page {
    max-width: 680px;
    margin: 0 auto;
    padding: 8rem 1.5rem 4rem;
  }

  .project-header {
    margin-bottom: 3rem;
  }

  .back-link {
    display: inline-block;
    font-family: var(--font-body);
    font-size: 0.85rem;
    color: var(--color-text-muted);
    text-decoration: none;
    margin-bottom: 1.5rem;
    transition: color 0.3s ease;
  }
  .back-link:hover {
    color: var(--color-accent);
  }

  .project-title {
    font-family: var(--font-display);
    font-size: clamp(1.8rem, 5vw, 2.5rem);
    font-weight: 400;
    line-height: 1.15;
    margin: 0 0 0.75rem;
  }

  .project-desc {
    font-size: 1.05rem;
    color: var(--color-text-secondary);
    margin: 0 0 1.25rem;
    line-height: 1.6;
  }

  .project-meta {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: space-between;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.35rem;
  }

  .project-tag {
    font-family: var(--font-mono);
    font-size: 0.58rem;
    letter-spacing: 0.04em;
    padding: 0.15em 0.5em;
    background: var(--color-indigo-dim);
    color: var(--color-indigo);
    border-radius: 2px;
  }

  .project-links {
    display: flex;
    gap: 0.75rem;
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-family: var(--font-body);
    font-size: 0.85rem;
    padding: 0.4rem 0.85rem;
    border-radius: 4px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .project-link-site {
    border: 1px solid var(--color-accent);
    color: var(--color-accent);
  }
  .project-link-site:hover {
    background: var(--color-accent);
    color: white;
  }

  .project-link-repo {
    border: 1px solid var(--color-border);
    color: var(--color-text-secondary);
  }
  .project-link-repo:hover {
    border-color: var(--color-border);
    color: var(--color-text);
    background: var(--color-surface-hover);
  }

  .project-divider {
    margin-top: 1.5rem;
  }

  @media (max-width: 480px) {
    .project-meta {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
