---
import Base from "./Base.astro";

interface Props {
  title: string;
  description: string;
  date: Date;
  tags: string[];
}

const { title, description, date, tags } = Astro.props;

const formattedDate = date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<Base title={title} description={description}>
  <article class="post">
    <header class="post-header">
      <!-- Vertical date â€” decorative accent on desktop -->
      <time class="post-date-vertical" aria-hidden="true">{formattedDate}</time>

      <a href="/blog" class="post-back">&larr; all posts</a>
      <h1 class="post-title">{title}</h1>
      <div class="post-meta">
        <time class="post-date">{formattedDate}</time>
        {tags.length > 0 && (
          <div class="post-tags">
            {tags.map((tag) => (
              <span class="post-tag">{tag}</span>
            ))}
          </div>
        )}
      </div>
      <hr class="post-divider" />
    </header>
    <div class="prose">
      <slot />
    </div>
  </article>
</Base>

<style>
  .post {
    max-width: 680px;
    margin: 0 auto;
    padding: 9rem 1.5rem 5rem;
    position: relative;
  }

  .post-header {
    margin-bottom: 3.5rem;
  }

  .post-back {
    display: inline-block;
    font-family: var(--font-body);
    font-size: 0.85rem;
    color: var(--color-text-muted);
    text-decoration: none;
    margin-bottom: 1.5rem;
    transition: color 0.3s ease;
  }
  .post-back:hover {
    color: var(--color-accent);
  }

  /* Vertical date positioned in the left margin */
  .post-date-vertical {
    position: absolute;
    left: -5rem;
    top: 9.5rem;
    writing-mode: vertical-rl;
    text-orientation: mixed;
    font-family: var(--font-mono);
    font-size: 0.6rem;
    color: var(--color-text-muted);
    letter-spacing: 0.15em;
    opacity: 0.35;
    white-space: nowrap;
  }

  .post-title {
    font-family: var(--font-display);
    font-size: clamp(1.8rem, 5vw, 2.5rem);
    font-weight: 600;
    line-height: 1.15;
    letter-spacing: -0.015em;
    margin: 0 0 1.25rem;
  }

  .post-meta {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .post-date {
    font-family: var(--font-mono);
    font-size: 0.68rem;
    color: var(--color-text-muted);
    letter-spacing: 0.02em;
  }

  .post-tags {
    display: flex;
    gap: 0.35rem;
  }

  .post-tag {
    font-family: var(--font-mono);
    font-size: 0.58rem;
    letter-spacing: 0.04em;
    padding: 0.15em 0.5em;
    background: var(--color-indigo-dim);
    color: var(--color-indigo);
    border-radius: 2px;
  }

  .post-divider {
    margin-top: 1.75rem;
  }

  @media (max-width: 900px) {
    .post-date-vertical {
      display: none;
    }
  }
</style>
