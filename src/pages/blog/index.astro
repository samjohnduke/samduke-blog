---
import Base from "../../layouts/Base.astro";
import BlogCard from "../../components/BlogCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<Base title="Blog" description="Thoughts on edge computing, web development, Rust, and building things.">
  <div class="page">
    <header class="page-header animate-fade-in-up">
      <span class="page-kanji" aria-hidden="true">随筆</span>
      <h1 class="page-title">Blog</h1>
      <p class="page-desc">Thoughts on edge computing, web development, and building things.</p>
    </header>
    <div class="entries">
      {posts.map((post, i) => (
        <div class="animate-fade-in-up" style={`animation-delay: ${0.05 * (i + 1)}s;`}>
          <BlogCard
            title={post.data.title}
            date={post.data.date}
            slug={post.id}
          />
        </div>
      ))}
    </div>
  </div>
</Base>

<style>
  .page {
    max-width: var(--width-content);
    margin: 0 auto;
    padding: 8rem 1.5rem 4rem;
  }

  .page-header {
    margin-bottom: 2rem;
  }

  .page-kanji {
    font-family: var(--font-jp);
    font-size: 5rem;
    font-weight: 200;
    color: var(--color-border);
    opacity: 0.18;
    line-height: 1;
    display: block;
    margin-bottom: -1.25rem;
    user-select: none;
    pointer-events: none;
  }

  .page-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 2.8rem);
    font-weight: 300;
    letter-spacing: -0.01em;
    margin: 0 0 0.5rem;
  }

  .page-desc {
    font-size: 1rem;
    color: var(--color-text-secondary);
    margin: 0;
  }

  .entries {
    display: flex;
    flex-direction: column;
  }
</style>
