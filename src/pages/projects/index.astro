---
import Base from "../../layouts/Base.astro";
import ProjectCard from "../../components/ProjectCard.astro";
import { getCollection } from "astro:content";

const projects = (await getCollection("projects"))
  .sort((a, b) => a.data.order - b.data.order);
---

<Base title="Projects" description="Things I've built and am building.">
  <div class="page">
    <header class="page-header animate-fade-in-up">
      <span class="page-kanji" aria-hidden="true">作品</span>
      <h1 class="page-title">Projects</h1>
      <p class="page-desc">Things I've built and am building.</p>
    </header>
    <div class="project-entries">
      {projects.map((project, i) => (
        <div class="animate-fade-in-up" style={`animation-delay: ${0.05 * (i + 1)}s;`}>
          <ProjectCard
            title={project.data.title}
            description={project.data.description}
            tags={project.data.tags}
            slug={project.id}
          />
        </div>
      ))}
    </div>
  </div>
</Base>

<style>
  .page {
    max-width: var(--width-content);
    margin: 0 auto;
    padding: 8rem 1.5rem 4rem;
  }

  .page-header {
    margin-bottom: 2rem;
  }

  .page-kanji {
    font-family: var(--font-jp);
    font-size: 5rem;
    font-weight: 200;
    color: var(--color-border);
    opacity: 0.18;
    line-height: 1;
    display: block;
    margin-bottom: -1.25rem;
    user-select: none;
    pointer-events: none;
  }

  .page-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 2.8rem);
    font-weight: 300;
    letter-spacing: -0.01em;
    margin: 0 0 0.5rem;
  }

  .page-desc {
    font-size: 1rem;
    color: var(--color-text-secondary);
    margin: 0;
  }

  .project-entries {
    display: flex;
    flex-direction: column;
  }
</style>
