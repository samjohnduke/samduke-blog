<section class="hero">
  <!-- Main content -->
  <div class="hero-main">
    <div class="hero-brush" aria-hidden="true">
      <svg width="60" height="6" viewBox="0 0 60 6" fill="none">
        <path d="M0,3 Q15,0.5 30,3 Q45,5.5 60,3" stroke="currentColor" stroke-width="0.75" stroke-linecap="round"/>
      </svg>
    </div>

    <h1 class="hero-name">
      <span class="hero-first">Sam</span>
      <span class="hero-last">Duke</span>
    </h1>

    <p class="hero-tagline">
      engineer — founder @ chameleon creator
    </p>

    <div class="hero-accent-line" aria-hidden="true"></div>
  </div>

  <!-- Framed nature image — like a kakemono (hanging scroll painting) -->
  <div class="hero-frame">
    <div class="hero-frame-mat">
      <img src="/hero-garden.jpg" alt="" class="hero-frame-img" loading="eager" />
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 92vh;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 4rem;
    max-width: 1100px;
    margin: 0 auto;
    padding: 6rem 4rem 4rem;
    overflow: hidden;
  }

  /* ── Main content ── */
  .hero-main {
    flex: 1;
    max-width: 520px;
    animation: heroReveal 1s var(--ease-settle) both;
  }

  @keyframes heroReveal {
    from {
      opacity: 0;
      transform: translateY(16px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-brush {
    color: var(--color-border);
    margin-bottom: 2.5rem;
    opacity: 0.6;
  }

  .hero-name {
    font-family: var(--font-display);
    font-size: clamp(3.5rem, 8vw, 6rem);
    font-weight: 300;
    letter-spacing: -0.03em;
    line-height: 0.95;
    margin: 0 0 2rem;
    color: var(--color-text);
  }

  .hero-first,
  .hero-last {
    display: block;
  }

  .hero-last {
    margin-top: 0.1em;
  }

  .hero-tagline {
    font-family: var(--font-body);
    font-size: clamp(0.92rem, 1.5vw, 1.05rem);
    color: var(--color-text-secondary);
    line-height: 1.65;
    margin: 0 0 2rem;
    max-width: 420px;
  }

  .hero-accent-line {
    width: 50px;
    height: 1.5px;
    background: var(--color-accent);
    opacity: 0.45;
    margin-bottom: 2rem;
  }

  .hero-actions {
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
  }

  .hero-link {
    font-family: var(--font-body);
    font-size: 0.92rem;
    color: var(--color-indigo);
    text-decoration: none;
    transition: color 0.4s ease-out;
  }

  .hero-link:hover {
    color: var(--color-accent);
  }

  .hero-arrow {
    display: inline-block;
    font-size: 0.85em;
    transition: transform 0.4s var(--ease-settle);
  }

  .hero-link:hover .hero-arrow {
    transform: translateX(4px);
  }

  /* ── Framed nature image ── */
  .hero-frame {
    flex-shrink: 0;
    width: min(340px, 28vw);
    height: min(480px, 40vw);
    /* Wooden frame — warm walnut gradient */
    background: linear-gradient(
      145deg,
      #8a7356 0%,
      #6b5538 25%,
      #7d6848 50%,
      #5c4630 75%,
      #8a7356 100%
    );
    padding: 7px;
    border-radius: 2px;
    box-shadow:
      0 2px 8px rgba(44, 36, 24, 0.12),
      0 8px 32px rgba(44, 36, 24, 0.1),
      0 20px 60px rgba(44, 36, 24, 0.08),
      inset 0 1px 0 rgba(255, 255, 255, 0.08),
      inset 0 -1px 0 rgba(0, 0, 0, 0.15);
    opacity: 0;
    animation: frameAppear 1.2s ease-out 0.4s both;
  }

  @keyframes frameAppear {
    from {
      opacity: 0;
      transform: translateY(8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-frame-mat {
    width: 100%;
    height: 100%;
    /* Cream mat border between frame and image */
    border: 4px solid rgba(242, 235, 223, 0.7);
    overflow: hidden;
  }

  .hero-frame-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center 30%;
    display: block;
    filter: saturate(0.85) contrast(0.95);
    transition: filter 0.8s ease;
  }

  .hero-frame:hover .hero-frame-img {
    filter: saturate(1) contrast(1);
  }

  /* ── Mobile ── */
  @media (max-width: 900px) {
    .hero {
      gap: 2.5rem;
    }
    .hero-frame {
      width: 260px;
      height: 370px;
    }
  }

  @media (max-width: 768px) {
    .hero {
      min-height: auto;
      padding: 7rem 1.5rem 2rem;
    }

    .hero-main {
      max-width: 100%;
    }

    .hero-name {
      font-size: clamp(3.5rem, 12vw, 5rem);
    }

    .hero-frame {
      display: none;
    }
  }
</style>
