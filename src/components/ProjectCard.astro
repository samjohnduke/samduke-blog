---
interface Props {
  title: string;
  description: string;
  tags: string[];
  slug: string;
}

const { title, description, tags, slug } = Astro.props;
---

<a href={`/projects/${slug}`} class="project-entry">
  <div class="project-accent"></div>
  <div class="project-body">
    <h3 class="project-name">{title}</h3>
    <p class="project-summary">{description}</p>
    {tags.length > 0 && (
      <div class="project-tags">
        {tags.map((tag) => (
          <span class="ptag">{tag}</span>
        ))}
      </div>
    )}
  </div>
  <svg class="project-arrow" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
    <line x1="5" y1="12" x2="19" y2="12"/>
    <polyline points="12 5 19 12 12 19"/>
  </svg>
</a>

<style>
  .project-entry {
    display: flex;
    gap: 1.25rem;
    padding: 1.75rem 0;
    text-decoration: none;
    color: inherit;
    align-items: flex-start;
  }

  .project-entry + .project-entry {
    border-top: 1px solid var(--color-border-light);
  }

  .project-accent {
    width: 2.5px;
    min-height: 2.5rem;
    align-self: stretch;
    background: var(--color-accent);
    border-radius: 1px;
    flex-shrink: 0;
    opacity: 0.55;
    transition: opacity 0.4s ease-out;
  }

  .project-entry:hover .project-accent {
    opacity: 1;
  }

  .project-body {
    flex: 1;
    min-width: 0;
  }

  .project-name {
    font-family: var(--font-display);
    font-size: 1.3rem;
    font-weight: 600;
    letter-spacing: -0.01em;
    margin: 0 0 0.45rem;
    line-height: 1.3;
    color: var(--color-text);
    transition: color 0.4s ease-out;
  }

  .project-entry:hover .project-name {
    color: var(--color-accent);
  }

  .project-summary {
    font-family: var(--font-body);
    font-size: 0.92rem;
    color: var(--color-text-secondary);
    line-height: 1.65;
    margin: 0 0 0.65rem;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.35rem;
  }

  .ptag {
    font-family: var(--font-mono);
    font-size: 0.58rem;
    letter-spacing: 0.04em;
    padding: 0.15em 0.5em;
    background: var(--color-indigo-dim);
    color: var(--color-indigo);
    border-radius: 2px;
  }

  .project-arrow {
    flex-shrink: 0;
    color: var(--color-text-muted);
    margin-top: 0.3rem;
    opacity: 0.55;
    transition: color 0.4s ease-out, transform 0.4s var(--ease-settle), opacity 0.4s ease-out;
  }

  .project-entry:hover .project-arrow {
    color: var(--color-accent);
    opacity: 1;
    transform: translateX(3px);
  }

  @media (max-width: 480px) {
    .project-arrow {
      display: none;
    }
  }
</style>
