---
interface Props {
  title: string;
  description?: string;
  date: Date;
  tags?: string[];
  slug: string;
}

const { title, date, slug } = Astro.props;

const formattedDate = date.toLocaleDateString("en-US", {
  month: "long",
  day: "numeric",
});
---

<a href={`/blog/${slug}`} class="blog-entry">
  <time class="entry-date">{formattedDate}</time>
  <span class="entry-title">{title}</span>
</a>

<style>
  .blog-entry {
    display: flex;
    align-items: baseline;
    gap: 2rem;
    padding: 0.8rem 0;
    border-bottom: 1px solid var(--color-border-light);
    text-decoration: none;
    color: inherit;
  }

  .blog-entry:last-child {
    border-bottom: none;
  }

  .entry-date {
    font-family: var(--font-body);
    font-size: 0.88rem;
    color: var(--color-text-muted);
    min-width: 110px;
    flex-shrink: 0;
  }

  .entry-title {
    font-family: var(--font-display);
    font-size: 1.1rem;
    font-weight: 400;
    color: var(--color-indigo);
    transition: color 0.4s ease-out;
  }

  .blog-entry:hover .entry-title {
    color: var(--color-accent);
  }

  @media (max-width: 480px) {
    .blog-entry {
      flex-direction: column;
      gap: 0.15rem;
    }
    .entry-date {
      min-width: unset;
      font-size: 0.78rem;
    }
  }
</style>
