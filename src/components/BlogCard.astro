---
interface Props {
  title: string;
  description: string;
  date: Date;
  tags: string[];
  slug: string;
}

const { title, description, date, tags, slug } = Astro.props;

const formattedDate = date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "short",
  day: "numeric",
});

const readingTime = Math.max(1, Math.ceil(description.length / 50));
---

<a href={`/blog/${slug}`} class="blog-card">
  <div class="card-accent"></div>
  <div class="card-body">
    <div class="card-meta">
      <time class="card-date">{formattedDate}</time>
      <span class="card-dot">&middot;</span>
      <span class="card-reading">{readingTime} min read</span>
    </div>
    <h3 class="card-title">{title}</h3>
    <p class="card-desc">{description}</p>
    {tags.length > 0 && (
      <div class="card-tags">
        {tags.map((tag) => (
          <span class="card-tag">{tag}</span>
        ))}
      </div>
    )}
  </div>
</a>

<style>
  .blog-card {
    display: flex;
    position: relative;
    background: transparent;
    border: none;
    text-decoration: none;
    color: inherit;
    transition: transform 0.25s ease;
    clip-path: polygon(
      0 0,
      calc(100% - 10px) 0,
      100% 10px,
      100% 100%,
      10px 100%,
      0 calc(100% - 10px)
    );
  }

  /* Border layer */
  .blog-card::before {
    content: "";
    position: absolute;
    inset: 0;
    background: var(--color-border);
    clip-path: polygon(
      0 0,
      calc(100% - 10px) 0,
      100% 10px,
      100% 100%,
      10px 100%,
      0 calc(100% - 10px)
    );
    transition: background 0.25s ease;
    z-index: 0;
  }

  /* Fill layer */
  .blog-card::after {
    content: "";
    position: absolute;
    inset: 1px;
    background: var(--color-surface);
    clip-path: polygon(
      0 0,
      calc(100% - 10px) 0,
      100% 10px,
      100% 100%,
      10px 100%,
      0 calc(100% - 10px)
    );
    z-index: 0;
  }

  .blog-card:hover {
    transform: translateY(-2px);
  }

  .blog-card:hover::before {
    background: var(--color-accent);
  }

  .card-accent {
    position: absolute;
    left: 1px;
    top: 1px;
    bottom: -40px;
    width: 50px;
    background: var(--color-accent);
    z-index: 1;
    clip-path: polygon(
      0 0,
      3px 0,
      3px calc(100% - 51px),
      50px calc(100% - 2px),
      47px 100%,
      0 calc(100% - 50px)
    );
  }

  .card-body {
    position: relative;
    z-index: 1;
    padding: 1.25rem 1.5rem 1.25rem calc(3px + 1.5rem);
    flex: 1;
    min-width: 0;
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .card-date,
  .card-reading {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-text-muted);
    letter-spacing: 0.02em;
  }

  .card-dot {
    color: var(--color-text-muted);
    font-size: 0.75rem;
  }

  .card-title {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 0.5rem;
    line-height: 1.3;
  }

  .blog-card:hover .card-title {
    color: var(--color-accent-bright);
  }

  .card-desc {
    font-size: 0.9rem;
    color: var(--color-text-secondary);
    margin: 0 0 0.75rem;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .card-tag {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    letter-spacing: 0.03em;
    padding: 0.2em 0.6em;
    background: var(--color-amber-dim);
    color: var(--color-amber);
    border-radius: 3px;
  }
</style>
