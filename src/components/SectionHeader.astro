---
interface Props {
  title: string;
  kanji?: string;
  href?: string;
}

const { title, kanji, href } = Astro.props;
---

<div class="section-head">
  {kanji && <span class="section-kanji" aria-hidden="true">{kanji}</span>}
  <div class="section-info">
    <h2 class="section-name">{title}</h2>
    {href && (
      <a href={href} class="section-all">
        view all <span class="all-arrow">&rarr;</span>
      </a>
    )}
  </div>
</div>

<style>
  .section-head {
    position: relative;
    margin-bottom: 2.5rem;
  }

  .section-kanji {
    font-family: var(--font-jp);
    font-size: 3.8rem;
    font-weight: 200;
    color: var(--color-border);
    opacity: 0.22;
    line-height: 1;
    display: block;
    margin-bottom: -0.6rem;
    user-select: none;
    pointer-events: none;
  }

  .section-info {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 1rem;
  }

  .section-name {
    font-family: var(--font-mono);
    font-size: 0.68rem;
    font-weight: 500;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    color: var(--color-text-secondary);
    margin: 0;
  }

  .section-all {
    font-family: var(--font-body);
    font-size: 0.82rem;
    color: var(--color-text-muted);
    text-decoration: none;
    white-space: nowrap;
    transition: color 0.4s ease-out;
  }

  .section-all:hover {
    color: var(--color-accent);
  }

  .all-arrow {
    display: inline-block;
    font-size: 0.85em;
    transition: transform 0.4s var(--ease-settle);
  }

  .section-all:hover .all-arrow {
    transform: translateX(3px);
  }

  @media (max-width: 480px) {
    .section-kanji {
      font-size: 2.8rem;
    }
  }
</style>
