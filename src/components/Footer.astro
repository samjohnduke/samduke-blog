<style>
  .footer {
    margin-top: 8rem;
    padding: 0 1.5rem 2rem;
  }

  .footer-wave {
    display: flex;
    justify-content: center;
    margin-bottom: 2.5rem;
    color: var(--color-border);
    opacity: 0.45;
  }

  .footer-inner {
    max-width: 1060px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .footer-left {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .footer-name {
    font-family: var(--font-display);
    font-size: 0.92rem;
    font-weight: 400;
    color: var(--color-text-secondary);
  }

  .footer-copy {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    color: var(--color-text-muted);
  }

  .footer-links {
    display: flex;
    gap: 1.25rem;
    align-items: center;
  }

  .footer-icon {
    color: var(--color-text-muted);
    transition: color 0.4s ease-out;
    display: flex;
    align-items: center;
    opacity: 0.6;
  }
  .footer-icon:hover {
    color: var(--color-accent);
    opacity: 1;
  }

  @media (max-width: 480px) {
    .footer-inner {
      flex-direction: column;
      gap: 1.25rem;
      text-align: center;
    }
  }
</style>
